{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2015"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": false,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*"]
}
